<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app.RegistrationPage"
             BackgroundColor="#080433">
    <Grid RowDefinitions="Auto, *">
        <Grid Row="0" ColumnDefinitions="*,Auto" Margin="15,20,22,85">
            <Frame Grid.Column="0" BorderColor="#00FFFB" BackgroundColor="#8C74C6" WidthRequest="80" HeightRequest="73"
                   CornerRadius = "4" VerticalOptions="Start" HorizontalOptions="Start">
                <StackLayout Spacing="0">
                    <Label Text="NVK" FontSize="20" TextColor="#72BEEA" VerticalOptions="Start" />
                    <Label Text="in way" FontSize="14" TextColor="#72BEEA" />
                </StackLayout>
            </Frame>
            <HorizontalStackLayout Grid.Column="1" VerticalOptions="Start" HorizontalOptions="End" Spacing="12">
                <Label Text="Есть аккаунт?" FontSize="14" TextColor="#FFFFFF" VerticalOptions="Center" />
                <Button Text="авторизация" FontSize="9" TextColor="#FFFFFF" BackgroundColor="#208C8A"
                        WidthRequest="86" HeightRequest="34" CornerRadius = "10" 
                        Clicked="OnSwitchToAuthorizationClicked"/>
            </HorizontalStackLayout>
        </Grid>
        <VerticalStackLayout Grid.Row="1" HorizontalOptions="Center" Margin="33,0,22,0">
            <Label Text="Регистрация" FontSize="36" TextColor="#FFFFFF" HorizontalOptions="Center" />
            <Frame BorderColor="#FFFFFF" BackgroundColor="#72BEEA" Padding="0" Margin="0,42,0,0" 
                   MinimumWidthRequest="359" MinimumHeightRequest="49" CornerRadius="10">
                <Entry FontSize="20" Placeholder="Email" PlaceholderColor="#FFFFFF" TextColor="#FFFFFF" 
                       BackgroundColor="#72BEEA" />
            </Frame>
            <Frame BorderColor="#FFFFFF" BackgroundColor="#72BEEA" Padding="0" Margin="0,57,0,0" 
                   MinimumWidthRequest="359" MinimumHeightRequest="49" CornerRadius="10">
                <Entry FontSize="20" Placeholder="Password" PlaceholderColor="#FFFFFF" TextColor="#FFFFFF" 
                       BackgroundColor="#72BEEA" IsPassword="True" />
            </Frame>
            <Button Text="ЗАРЕГИСТРИРОВАТЬСЯ" FontSize="18" TextColor="#FFFFFF" BackgroundColor="#208C8A" 
                    MinimumWidthRequest="276" MinimumHeightRequest="49" CornerRadius="10" Margin="0,70,0,0" 
                    HorizontalOptions="Center" Clicked="OnAuthorizationClicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
